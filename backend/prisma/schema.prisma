generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
}

model User {
  id String @id @default(uuid())

  name     String
  username String @unique
  email    String @unique

  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  roles UserRole[] @default([ADMIN])
}
